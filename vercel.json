{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**"]
      }
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [

    {
      "src": "/403",
      "dest": "/403.html",
      "headers": {
        "Cache-Control": "no-store, max-age=0"
    },
    {
      "src": "/api/check-ip",
      "dest": "/api/check-ip.js"
    
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)", 
      "dest": "/$1",
      "continue": true
    }
  )
}
